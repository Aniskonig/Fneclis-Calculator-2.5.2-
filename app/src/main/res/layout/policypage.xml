<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true">


    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="20dp"
            app:cardBackgroundColor="@color/bg_color"
            app:cardCornerRadius="20dp">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

            <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_centerHorizontal="true"
                    android:contentDescription="@string/todo"
                    app:srcCompat="@drawable/shield"
                    tools:ignore="VectorDrawableCompat" />

            <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/imageView2"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/monadi"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingTop="16dp"
                    android:paddingRight="8dp"
                    android:text="@string/privacyTXT"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            <Button
                    android:id="@+id/privacyBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView3"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                    android:fontFamily="@font/monadi"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="@string/privacyBtnTxt"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            <Button
                    android:id="@+id/contentBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView5"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/common_google_signin_btn_icon_light_normal_background"
                    android:fontFamily="@font/monadi"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="@string/contentBtnTxt"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/privacyBtn"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="0dp"
                    android:fontFamily="@font/monadi"
                    android:gravity="center"
                    android:paddingLeft="8dp"
                    android:paddingTop="16dp"
                    android:paddingRight="8dp"
                    android:paddingBottom="16dp"
                    android:text="@string/contentTxt"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

            <Button
                    android:id="@+id/agreePolBtn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/contentBtn"
                    android:background="@drawable/greenagreebg"
                    android:fontFamily="@font/monadi"
                    android:text="@string/agree"
                    android:textColor="@color/white"
                    android:textSize="24sp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>